<?xml version="1.0" encoding="utf-8"?>
<odoo>
 <template id="report_veterinary_insurance">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <span>Policy Number :</span><span t-field="o.policy_number"/><br/>
                        <span>Pet :</span><span t-field="o.pet_id"/><br />
                        <span>Insurance company :</span><span t-field="o.insurance_company"/><br/>
                        <span>Expiration date :</span><span t-field="o.expiration_date" t-options="{'widget':'date'}"/><br/>
                        <span>Cover details :</span><span t-field="o.cover_details"/><br/>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="action_report_veterinary_insurance" model="ir.actions.report">
        <field name="name">Veterinary Insurance Report</field>
        <field name="model">veterinary.insurance</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">veterinary_clinic_laura.report_veterinary_insurance</field>
        <field name="report_file">veterinary_clinic_laura.report_veterinary_insurance</field>
        <field name="print_report_name">'%s' % object.policy_number</field>
        <field name="binding_model_id" ref="model_veterinary_insurance"/>
        <field name="binding_type">report</field>
    </record>
    

</odoo>
