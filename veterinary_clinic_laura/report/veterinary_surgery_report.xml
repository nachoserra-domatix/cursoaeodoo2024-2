<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_veterinary_surgery">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        
                        <strong>Pet:</strong><br />
                        <span t-field="o.pet_id"/><br />

                        <strong>Employee:</strong><br />
                        <span t-field="o.employee_id"/><br />
                        
                        <strong>Date:</strong><br />
                        <span t-field="o.surgery_date" t-options="{'widget':'date'}"/><br />

                        <t t-if="o.line_ids">
                            <table>
                            
                            <thead>
                                <tr>
                                    <th class="text-start">Name</th><br/>
                                    <th class="text-end">State</th>
                                </tr>
                            </thead>
                            <tbody>
                                
                                <t t-foreach="o.line_ids" t-as="line">
                                    <tr>
                                        <td><span t-field="line.name"></span></td>
                                        <td class="text-end"><span t-field="line.state"></span></td>
                                    </tr>
                                </t>
                            </tbody>
                            </table>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="action_report_veterinary_surgery" model="ir.actions.report">
        <field name="name">Veterinary Surgery Report</field>
        <field name="model">veterinary.surgery</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">veterinary_clinic_laura.report_veterinary_surgery</field>
        <field name="report_file">veterinary_clinic_laura.report_veterinary_surgery</field>
        <field name="print_report_name">'%s' % object.name</field>
        <field name="binding_model_id" ref="model_veterinary_surgery"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="base.paperformat_euro"/>
    </record>




    

</odoo>
