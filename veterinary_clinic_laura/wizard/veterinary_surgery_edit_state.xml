<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="veterinary_surgery_edit_state_view_form" model="ir.ui.view">
        <field name="name">veterinary.surgery.edit.state.form</field>
        <field name="model">veterinary.surgery.edit.state</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="state"/>
                        
                    </group>
                    <footer>
                        <button string="Confirm" name="mass_edit_state" type="object" />
                        <button string="Cancel" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
    <record id="veterinary_surgery_edit_state_action" model="ir.actions.act_window">
        <field name="name">Mass edit state</field>
        <field name="res_model">veterinary.surgery.edit.state</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="binding_model_id" ref="model_veterinary_surgery"/> 
        <field name="binding_view_types">list</field>   
        
    </record>
   <menuitem
    id="veterinary_surgery_edit_state_menu"
    name="Mass edit surgeries"
    action="veterinary_surgery_edit_state_action"
    parent="veterinary_management_menu"
    sequence="10"/>

</odoo>