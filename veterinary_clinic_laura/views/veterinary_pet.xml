 <!--<?xml version="1.0" encoding="utf-8"?>-->
 <odoo>
 
    <record id="veterinary_pet_action" model="ir.actions.act_window">
        <field name="name">Pets</field>
        <field name="res_model">veterinary.pet</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a new pet</p>
        </field>
    </record>
    <menuitem
        id="veterinary_clinic_menu"
        name="Veterinary Clinic"
        sequence="10"/>
    <menuitem
        id="veterinary_management_menu"
        name="Management"
        parent="veterinary_clinic_menu"
        sequence="10"/>
    
    <menuitem
        id="veterinary_pet_menu"
        name="Pets"
        action="veterinary_pet_action"
        parent="veterinary_management_menu"
        sequence="10"/>    


        <record id="veterinary_pet_view_tree" model="ir.ui.view">
            <field name="name">veterinary.pet.view.tree</field>
            <field name="model">veterinary.pet</field>
            <field name="arch" type="xml">
                <tree multi_edit="1" string="Appointments">
                    <field name="sequence" widget="handle"/>
                    <field name="name" optional="show"/>
                    <field name="pet_number" optional="show"/>
                    <field name="species" widget="badge" optional="show"/>
                    <field name="birthdate" optional="hide"/>
                    <field name="age" optional="hide"/>
                    <field name="weight" optional="show"/>
                    <field name="user_id" optional="show"/>
                </tree>
            </field>
        </record>

        <record id="veterinary_pet_view_form" model="ir.ui.view">
            <field name="name">veterinary.pet.view.form</field>
            <field name="model">veterinary.pet</field>
            <field name="arch" type="xml">
                <form string="Pets">
                    <!--<header>
                        <field name="species" options="{'clickable':1}" widget="statusbar"/>
                    </header>-->
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="pet_number"/>
                                <field name="species" />
                                
                            </group>
                            <group>
                                <field name="birthdate" />
                                <field name="age" />
                                <field name="weight" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
 
 </odoo>
 
  
 


 
