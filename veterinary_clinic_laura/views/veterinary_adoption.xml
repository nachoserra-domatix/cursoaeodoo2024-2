<odoo>
    <record id="veterinary_adoption_action" model="ir.actions.act_window">
        <field name="name">Adoptions</field>
        <field name="res_model">veterinary.adoption</field>
        <field name="view_mode">tree,form,pivot,kanban</field>
        <field name="domain">[]</field>
        <field name="context">{'search_default_pet_not_adopted':1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a new adoption</p>
        </field>
    </record>
    
    <record id="veterinary_adoption_view_form" model="ir.ui.view">
        <field name="name">veterinary.adoption.view.form</field>
        <field name="model">veterinary.adoption</field>
        <field name="arch" type="xml">
            <form string="Adoption">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="date_shelter_enter"/>
                        <field name="date_adoption"/>
                        <field name="pet_id" domain="[('adopted','=',False)]"/>
                    </group>
                    <group>
                        <field name="contact_id"/>
                        <field name="state_id"/>
                        <field name="user_id"/>
                        <field name="day_shelter"/>
                        <field name="adoption_fee"/> 
                    </group>
                    <notebook>
                        <page name="notes" string="Notas">  
                            <field name="notes"/>
                                  
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="veterinary_adoption_view_tree" model="ir.ui.view">
        <field name="name">veterinary.adoption.view.tree</field>
        <field name="model">veterinary.adoption</field>
        <field name="arch" type="xml">
            <tree string="Adoption">
                <field name="name" optional="show"/>
                <field name="date_shelter_enter" optional="show"/>
                <field name="date_adoption" optional="show"/>
                <field name="pet_id"  optional="show"/>
                <field name="contact_id" optional="show"/>
                <field name="state_id" optional="show"/>
                <field name="user_id" optional="hide"/>
                <field name="day_shelter" optional="hide"/>
                <field name="adoption_fee" optional="hide"/>    
                
            </tree>
        </field>
    </record>

    <record id="veterinary_pivot_view_pivot" model="ir.ui.view">
        <field name="name">veterinary.adoption.view.pivot</field>
        <field name="model">veterinary.adoption</field>
        <field name="arch" type="xml">
            <pivot string="Adoption">
                <field name="pet_id" type="row"/>
                <field name="adoption_fee" type="col"/>
             
            </pivot>
        </field>
    </record>


    <record id="veterinary_adoption_view_kanban" model="ir.ui.view">
        <field name="name">veterinary.adoption.view.kanban</field>
        <field name="model">veterinary.adoption</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state_id">
                <field name="user_id"/>
                <field name="name"/>
                <field name="date_adoption"/>
                <field name="color"/>
                <field name="image"/>
                <templates>
                    <t t-name="kanban-menu">
                        <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                        <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                    </t>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} #{lost_ribbon ? 'oe_kanban_card_ribbon' : ''} oe_kanban_global_click oe_kanban_card d-flex flex-column">
                        
                            <div class="oe_kanban_content flex-grow-1">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="date_adoption"/>
                                </div>
                            </div>
                            <div class="oe_kanban_footer">
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="image" widget="image" options="{'size':[50,50]}" class="oe_avatar"/>
 
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="user_id" widget="many2one_avatar_user" domain="[('share', '=', False)]"/>
                                    </div>
                                </div>
                            </div>


                        </div>
                        
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="veterinary_adoption_view_search" model="ir.ui.view">
        <field name="name">veterinary.adoption.view.tree</field>
        <field name="model">veterinary.adoption</field>
        <field name="arch" type="xml">
            <search string="Veterinary adoption">
               
             
                <field name="name" filter_domain="['|', '|',('name', 'ilike', self), ('pet_id', 'ilike', self), ('notes', 'ilike', self)]"/>
                <field name="user_id"/>
                <field name="contact_id"/>
                <filter name="pet_adopted" string="Pets adopted" domain="[('state_id.adopted', '=', True)]"/> 
                <filter name="pet_not_adopted" string="Pets not adopted" domain="[('state_id.adopted', '=', False)]"/>
                <filter name="group_by_user_id" string="User" context="{'group_by': 'user_id'}" />  

            </search>
        </field>
    </record>

    <menuitem
        id="veterinary_adoption_menu"
        name="Adoptions"
        action="veterinary_adoption_action"
        parent="veterinary_management_menu"
        sequence="70"/>
</odoo>