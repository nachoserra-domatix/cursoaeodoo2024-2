<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_veterinary_appointment_list">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <table class="table table-sm o_main_table table-borderless mt-4">
                        <thead>
                            <tr>
                                <th class="text-start col-2">Name</th>
                                <th class="text-start col-2">Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs" t-as="o">
                                <tr>
                                    <td><span t-field="o.name"/></td>
                                    <td><span t-field="o.date" t-options="{'widget':'date'}"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>

    <record id="action_report_veterinary_appointment_list" model="ir.actions.report">
        <field name="name">Appointments List</field>
        <field name="model">veterinary.appointment</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">veterinary_clinic_angel.report_veterinary_appointment_list</field>
        <field name="report_file">veterinary_clinic_angel.report_veterinary_appointment_list</field>
        <field name="print_report_name">'AppointmentsList'</field>
        <field name="binding_model_id" ref="model_veterinary_appointment"/>
        <field name="binding_type">report</field>
    </record>

</odoo>
