<odoo>
    <!-- Form View -->
    <record id="view_veterinary_adoption_form" model="ir.ui.view">
        <field name="name">veterinary.adoption.form</field>
        <field name="model">veterinary.adoption</field>
        <field name="arch" type="xml">
            <form string="Veterinary Adoption">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                            <field name="state_id"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="pet_id"/>
                            <field name="partner_id"/>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="entry_date"/>
                            <field name="adoption_date"/>
                            <field name="days_in_shelter"/>
                            <field name="price" widgter="monetary"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="notes" string="Notes">
                            <field name="notes"></field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_veterinary_adoption_tree" model="ir.ui.view">
        <field name="name">veterinary.adoption.tree</field>
        <field name="model">veterinary.adoption</field>
        <field name="arch" type="xml">
            <tree string="Veterinary Adoption">
                <field name="name"/>
                <field name="pet_id"/>
                <field name="partner_id"/>
                <field name="state_id"/>
                <field name="user_id" optional="hide"/>
                <field name="entry_date" optional="hide"/>
                <field name="adoption_date" optional="show"/>
                <field name="days_in_shelter" optional="hide"/>
                <field name="price" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- Pivot view -->
    <record id="veterinary_adoption_view_pivot" model="ir.ui.view">
        <field name="name">veterinary.adoption.view.pivot</field>
        <field name="model">veterinary.adoption</field>
        <field name="arch" type="xml">
            <pivot string="Adoptions">
                <field name="partner_id" type="row"/>
                <field name="pet_id" type="col"/>
            </pivot>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_veterinary_adoption_kanban" model="ir.ui.view">
        <field name="name">veterinary.adoption.kanban</field>
        <field name="model">veterinary.adoption</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state_id">
                <field name="name"/>
                <field name="pet_id"/>
                <field name="pet_id_image"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} #{lost_ribbon ? 'oe_kanban_card_ribbon' : ''} oe_kanban_global_click oe_kanban_card d-flex flex-column">
                            <div class="oe_kanban_content flex-grow-1">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="partner_id"/>
                                </div>
                            </div>
                            <div class="oe_kanban_footer">
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="pet_id_image" widget="image" options="{'size':[50,50]}"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="user_id" widget="many2one_avatar_user" domain="[('share', '=', False)]"/>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="veterinary_adoption_view_search" model="ir.ui.view">
        <field name="name">veterinary.adoption.view.search</field>
        <field name="model">veterinary.adoption</field>
        <field name="arch" type="xml">
            <search string="Veterinary Adoptions">
                <field name="name" filter_domain="['|','|', ('pet_id', 'ilike', self),('name', 'ilike', self),('notes', 'ilike', self)]"></field>
                <field name="user_id"></field>
                <field name="partner_id"></field>
                <filter name="adopted_filter" string="Adopted" domain="[('state_id.adopted', '=', True)]" />
                <filter name="not_adopted_filter" string="Not adopted" domain="['|',('state_id','=',False),('state_id.adopted', '=', False)]" />
                <filter name="group_by_user_id" string="User" context="{'group_by': 'user_id'}" />
            </search>
        </field>
    </record>

    <record id="action_veterinary_adoption" model="ir.actions.act_window">
        <field name="name">Adoptions</field>
        <field name="res_model">veterinary.adoption</field>
        <field name="view_mode">kanban,tree,form,pivot</field>
    </record>

    <menuitem id="menu_veterinary_adoption" name="Adoptions" parent="veterinary_management_menu" action="action_veterinary_adoption" sequence="40"/>
</odoo>