<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_veterinary_surgery_tree" model="ir.ui.view">
        <field name="name">veterinary.surgery.tree</field>
        <field name="model">veterinary.surgery</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date"/>
                <field name="pet_id"/>
                <field name="employee_id"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="view_veterinary_surgery_form" model="ir.ui.view">
        <field name="name">veterinary.surgery.form</field>
        <field name="model">veterinary.surgery</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Start" invisible="state != 'scheduled'" name="action_start_surgery" type="object" class="btn-primary"/>
                    <button string="Finish" invisible="state != 'in_progress'" name="action_finish_surgery" type="object" class="btn-success"/>
                    <button string="Cancel" invisible="state in ('cancelled','done')" name="action_cancel_surgery" type="object" class="btn-danger"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="pet_id" domain="[('age','>',1)]"/>
                            <field name="employee_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="actions" string="Actions">
                            <field name="action_ids" context="{'default_state':state}">
                                <tree string="Actions">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name" />
                                    <field name="state"></field>
                                </tree>
                                <form string="Action">
                                    <sheet>
                                        <group>
                                            <field name="name" />
                                            <field name="state"></field>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="veterinary_surgery_view_search" model="ir.ui.view">
        <field name="name">veterinary.surgery.view.search</field>
        <field name="model">veterinary.surgery</field>
        <field name="arch" type="xml">
            <search string="Veterinary Surgeries">
                <field name="name"></field>
                <field name="pet_id"></field>
                <filter name="scheduled_filter" string="Scheduled" domain="[('state', '=', 'scheduled')]" />
                <filter name="in_progress_filter" string="In progress" domain="[('state', '=', 'in_progress')]" />
                <filter name="done_filter" string="Done" domain="[('state', '=', 'done')]" />
                <filter name="group_by_employee_id" string="Veterinarian" context="{'group_by': 'employee_id'}" />
                <filter name="group_by_pet_id" string="Pet" context="{'group_by': 'pet_id'}" />
            </search>
        </field>
    </record>

    <record id="veterinary_surgery_view_kanban" model="ir.ui.view">
        <field name="name">veterinary.surgery.view.kanban</field>
        <field name="model">veterinary.surgery</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="name"/>
                <field name="date"/>
                <field name="employee_id"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-menu">
                        <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                        <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                    </t>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} #{lost_ribbon ? 'oe_kanban_card_ribbon' : ''} oe_kanban_global_click oe_kanban_card d-flex flex-column">
                            <div class="oe_kanban_content flex-grow-1">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="date"/>
                                </div>
                            </div>
                            <div class="oe_kanban_footer">
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                         <field name="pet_id"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="employee_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"/>
                        </div>

                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="veterinary_surgery_view_pivot" model="ir.ui.view">
        <field name="name">veterinary.surgery.view.pivot</field>
        <field name="model">veterinary.surgery</field>
        <field name="arch" type="xml">
            <pivot string="Surgeries">
                <field name="employee_id" type="row"/>
                <field name="pet_id" type="col"/>
            </pivot>
        </field>
    </record>

    <record id="veterinary_surgery_view_graph" model="ir.ui.view">
        <field name="name">veterinary.surgery.view.graph</field>
        <field name="model">veterinary.surgery</field>
        <field name="arch" type="xml">
            <graph string="Surgeries" type="bar">
                <field name="employee_id" />
            </graph>
        </field>
    </record>

    <record id="veterinary_surgery_view_calendar" model="ir.ui.view">
        <field name="name">veterinary.surgery.view.calendar</field>
        <field name="model">veterinary.surgery</field>
        <field name="arch" type="xml">
            <calendar string="Surgeries" date_start="date" color="employee_id">
                <field name="name"></field>
                <field name="employee_id"></field>
                <field name="employee_id" filters="1"></field>
                <field name="pet_id" filters="1"></field>
                <field name="state" filters="1"></field>
            </calendar>
        </field>
    </record>

    <record id="action_veterinary_surgery" model="ir.actions.act_window">
        <field name="name">Surgeries</field>
        <field name="res_model">veterinary.surgery</field>
        <field name="view_mode">tree,form,kanban,pivot,graph,calendar</field>
    </record>

    <menuitem id="menu_veterinary_surgery" name="Surgeries" parent="veterinary_management_menu" action="action_veterinary_surgery" sequence="30"/>
</odoo>
