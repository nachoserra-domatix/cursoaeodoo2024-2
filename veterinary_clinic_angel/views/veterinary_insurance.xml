<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_veterinary_insurance_tree" model="ir.ui.view">
        <field name="name">veterinary.insurance.tree</field>
        <field name="model">veterinary.insurance</field>
        <field name="arch" type="xml">
            <tree>
                <field name="policy_number"/>
                <field name="company"/>
                <field name="pet_id" optional="show"/>
                <field name="expiration_date" optional="show"/>
                <field name="expired" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="view_veterinary_insurance_form" model="ir.ui.view">
        <field name="name">veterinary.insurance.form</field>
        <field name="model">veterinary.insurance</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Check expiration" name="check_if_expired" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="policy_number"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="company"/>
                            <field name="pet_id"/>
                            <field name="coverage_details"/>
                        </group>
                        <group>
                            <field name="expiration_date"/>
                            <field name="expired"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_veterinary_insurance" model="ir.actions.act_window">
        <field name="name">Insurances</field>
        <field name="res_model">veterinary.insurance</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_veterinary_insurance" name="Insurances" parent="veterinary_management_menu" action="action_veterinary_insurance"/>

</odoo>
