<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree view-->
    <record id="veterinary_appointment_view_tree" model="ir.ui.view">
        <field name="name">veterinary.appointment.view.tree</field>
        <field name="model">veterinary.appointment</field>
        <field name="arch" type="xml">
            <tree string="Appointments">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="pet_id"></field>
                <field name="date" optional="show"/>
                <field name="urgency" optional="show" widget="boolean_toggle"/>
                <field name="user_id" optional="show"/>
                <field name="state" widget="badge" optional="show"/>
                <field name="duration" widget="float_time" optional="hide"/>
                <field name="tag_ids" widget="many2many_tags" optional="hide" options="{'color_field': 'color'}"/>
                <field name="total" widget="monetary" optional="hide"/>
                <field name="currency_id" invisible="1"></field>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="veterinary_appointment_view_form" model="ir.ui.view">
        <field name="name">veterinary.appointment.view.form</field>
        <field name="model">veterinary.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointment">
                <header>
                    <button string="Back to draft" invisible="state in ('draft')" name="action_draft" type="object" class="btn-secondary"/>
                    <button string="Done" invisible="state in ('done','cancel')" name="action_done" type="object" class="btn-success"/>
                    <button string="Cancel" invisible="state in ('cancelled')" name="action_cancel" type="object" class="btn-danger" groups="veterinary_clinic_angel.veterinary_clinic_groups_manager"/>
                    <button string="Create Tags" name="action_create_tags" type="object" class="btn-primary"/>
                    <button string="Edit state" type="action" name="%(veterinary_appointment_states_update_action)d"/>
                    <field name="state" options="{'clickable':1}" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="pet_id"></field>
                            <field name="partner_id" options="{'no_quick_create': True, 'no_open': True}"/>
                            <field name="partner_phone"/>
                            <field name="partner_email"/>
                            <field name="date"/>
                            <field name="user_id" options="{'no_create': True, 'no_quick_create': True, 'no_open': True}"/>
                            <field name="assigned"></field>
                        </group>
                        <group>
                            <field name="duration" widget="float_time"/>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            <field name="total" widget="monetary"/>
                            <field name="currency_id" invisible="1"></field>
                            <field name="company_id"></field>
                            <field name="color" widget="color_picker"></field>
                        </group>
                    </group>
                    <notebook>
                    <page name="lines" string="Products">
                        <field name='line_ids' context="{'tree_view_ref':'veterinary_clinic_angel.view_veterinary_appointment_line_simple_tree', 'form_view_ref':'veterinary_clinic_angel.veterinary_appointment_line_simple_form'}">
                        </field>
                    </page>
                        <page name="reason_page" string="Reason">
                            <field name="reason"/>
                        </page>
                        <page name="solution_page" string="Solution">
                            <field name="solution"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="veterinary_appointment_view_search" model="ir.ui.view">
        <field name="name">veterinary.appointment.view.search</field>
        <field name="model">veterinary.appointment</field>
        <field name="arch" type="xml">
            <search string="Veterinary Appointment">
                <field name="name" filter_domain="['|', ('solution', 'ilike', self),('name', 'ilike', self)]"></field>
                <field name="user_id"></field>
                <filter name="draft_filter" string="Draft" domain="[('state', '=', 'draft')]" />
                <filter name="done_filter" string="Done" domain="[('state', '=', 'done')]" />
                <filter name="group_by_user_id" string="User" context="{'group_by': 'user_id'}" />
                <filter name="group_by_state" string="State" context="{'group_by': 'state'}" />
            </search>
        </field>
    </record>

    <record id="veterinary_appointment_view_kanban" model="ir.ui.view">
        <field name="name">veterinary.appointment.view.kanban</field>
        <field name="model">veterinary.appointment</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="name"/>
                <field name="date"/>
                <field name="user_id"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-menu">
                        <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                        <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                    </t>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} #{lost_ribbon ? 'oe_kanban_card_ribbon' : ''} oe_kanban_global_click oe_kanban_card d-flex flex-column">
                            <div class="oe_kanban_content flex-grow-1">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="date"/>
                                </div>
                            </div>
                            <div class="oe_kanban_footer">
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="user_id" widget="many2one_avatar_user" domain="[('share', '=', False)]"/>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"/>
                        </div>

                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="veterinary_appointment_view_pivot" model="ir.ui.view">
        <field name="name">veterinary.appointment.view.pivot</field>
        <field name="model">veterinary.appointment</field>
        <field name="arch" type="xml">
            <pivot string="Appointments">
                <field name="user_id" type="row"/>
                <field name="date" type="col"/>
                <field name="duration" widget="float_time" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="veterinary_appointment_view_graph" model="ir.ui.view">
        <field name="name">veterinary.appointment.view.graph</field>
        <field name="model">veterinary.appointment</field>
        <field name="arch" type="xml">
            <graph string="Appointments" type="bar">
                <field name="user_id" />
                <field name="duration" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="veterinary_appointment_view_calendar" model="ir.ui.view">
        <field name="name">veterinary.appointment.view.calendar</field>
        <field name="model">veterinary.appointment</field>
        <field name="arch" type="xml">
            <calendar string="Appointments" date_start="date" color="user_id" hide_time="1">
                <field name="name"></field>
                <field name="user_id"></field>
                <field name="state" filters="1"></field>
            </calendar>
        </field>
    </record>

    <!-- Action for Veterinary Appointment -->
    <record id="action_veterinary_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">veterinary.appointment</field>
        <field name="view_mode">tree,form,kanban,pivot,graph,calendar</field>
    </record>

    <!-- Menu for Veterinary Appointment -->
    <menuitem id="menu_veterinary_appointment" name="Appointments" parent="veterinary_management_menu" action="action_veterinary_appointment" sequence="20"/>
</odoo>