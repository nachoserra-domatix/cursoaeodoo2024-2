<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_veterinary_allergy_tree" model="ir.ui.view">
        <field name="name">veterinary.allergy.tree</field>
        <field name="model">veterinary.allergy</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="severity" widget="priority"/>
                <field name="description" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="view_veterinary_allergy_form" model="ir.ui.view">
        <field name="name">veterinary.allergy.form</field>
        <field name="model">veterinary.allergy</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="severity" widget="priority"/>
                        <field name="is_severe"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="veterinary_allergy_action" model="ir.actions.act_window">
        <field name="name">Allergies</field>
        <field name="res_model">veterinary.allergy</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_no_content_smiling_face">
                Create a new allergy
            </p>
        </field>
    </record>

    <menuitem id="veterinary_allergy_menu" name="Allergies" action="veterinary_allergy_action" parent="veterinary_config_menu" sequence="20"/>
</odoo>
