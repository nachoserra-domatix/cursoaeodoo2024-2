<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_veterinary_appointment_line_tree" model="ir.ui.view">
        <field name="name">veterinary.appointment.line.tree</field>
        <field name="model">veterinary.appointment.line</field>
        <field name="arch" type="xml">
            <tree string="Appointment Lines">
                <field name='product_id'></field>
                <field name="name"></field>
                <field name="qty"></field>
                <field name="price_unit"></field>
                <field name="price_subtotal"></field>
            </tree>
        </field>
    </record>

    <record id="veterinary_appointment_line_view_form" model="ir.ui.view">
        <field name="name">veterinary.appointment.line.view.form</field>
        <field name="model">veterinary.appointment.line</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name='product_id'></field>
                        <field name="name"></field>
                        <field name="qty"></field>
                        <field name="price_unit"></field>
                        <field name="price_subtotal"></field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_veterinary_appointment_line_simple_tree" model="ir.ui.view">
        <field name="name">veterinary.appointment.line.simple.tree</field>
        <field name="model">veterinary.appointment.line</field>
        <field eval="100" name="priority"/>
        <field name="arch" type="xml">
            <tree string="Appointment Lines">
                <field name='product_id'></field>
                <field name="name"></field>
                <field name="qty"></field>
                <field name="price_unit" widget="monetary"></field>
                <field name="currency_id" invisible="1"></field>
            </tree>
        </field>
    </record>

    <record id="veterinary_appointment_line_simple_form" model="ir.ui.view">
        <field name="name">veterinary.appointment.line.simple.form</field>
        <field name="model">veterinary.appointment.line</field>
        <field eval="100" name="priority"/>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name='product_id'></field>
                        <field name="name"></field>
                        <field name="qty"></field>
                        <field name="price_unit" widget="monetary"></field>
                        <field name="currency_id" invisible="1"></field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_veterinary_appointment_line" model="ir.actions.act_window">
        <field name="name">Appointment Lines</field>
        <field name="res_model">veterinary.appointment.line</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_veterinary_appointment_line" name="Appointment Lines" parent="veterinary_management_menu" action="action_veterinary_appointment_line"/>

</odoo>
