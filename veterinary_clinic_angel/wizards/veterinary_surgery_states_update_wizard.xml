<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Esto añade una acción -->
    <record id="veterinary_surgery_states_update_action" model="ir.actions.act_window">
        <field name="name">Update surgery states</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">veterinary.surgery.states.update.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_veterinary_surgery" />
        <field name="binding_view_types">list</field>
    </record>

    <record id="veterinary_surgery_states_update_view_form" model="ir.ui.view">
        <field name="name">veterinary.surgery.states.update.view.form</field>
        <field name="model">veterinary.surgery.states.update.wizard</field>
        <field name="arch" type="xml">
            <form string="Update surgerys state">
                <p class="oe_grey">Here you can edit massively the surgeries state</p>
                <group>
                    <field name="state"></field>
                </group>
                <footer>
                    <button string="Confirm" class="oe_highlight" type="object" name="update_states"></button>
                    <button string="Cancel" class="btn-secondary" special="cancel"></button>
                </footer>
            </form>
        </field>
    </record>

</odoo>
