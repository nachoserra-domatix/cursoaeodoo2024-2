<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="veterinary_appointment_view_tree" model="ir.ui.view">
        <field name="name">veterinary_appointment.view.tree</field>
        <field name="model">veterinary.appointment</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" string="Appointments">
                <header>
                    <!-- <button string="All to draft" name="action_all_draft" type="object" class="btn-info"/>
                    <button string="All done" name="action_all_done" type="object" class="btn-success"/>
                    <button string="All cancelled" name="action_all_cancelled" type="object" class="btn-danger"/>
                    <button string="All other status" name="action_all_other" type="object" class="btn-warning"/> -->
                    <button string="Editar estado" name="%(veterinary_appointment_edit_state_action)d" type="action" class="btn-secondary"/>
                </header>
                <field name="sequence" widget="handle"/>
                <field name="name" />
                <field name="date" optional="show"/>
                <field name="urgency" widget="boolean_toggle" optional="show"/>
                <field name="tag_ids" widget="many2many_tags"/>
                <field name="user_id" optional="show"/>
                <field name="status" widget="badge" optional="show"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="total" widget="monetary"/>
                <field name="duration_minutes" optional="hide"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="veterinary_appointment_view_form" model="ir.ui.view">
        <field name="name">veterinary_appointment.view.form</field>
        <field name="model">veterinary.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointment">
                <header>
                    <field name="status" options="{'clickable':1}" widget="statusbar"/>
                    <button string="Back to draft" invisible="status in ('draft')" name="action_draft" type="object" class="btn-info"/>
                    <button string="Done" invisible="status in ('done', 'cancelled')" name="action_done" type="object" class="btn-success"/>
                    <button string="Cancelled" groups="veterinary_clinic_borja.veterinary_clinic_groups_manager" invisible="status in ('cancelled')" name="action_cancelled" type="object" class="btn-danger"/>
                    <button string="Set other status" invisible="status in ('other')" name="action_other" type="object" class="btn-warning"/>
                    <button string="Create Tags" name="create_tags" type="object" class="btn-secondary"/>
                    <button string="Editar estado" name="%(veterinary_appointment_edit_state_action)d" type="action" class="btn-secondary"/>
                </header>
                <sheet>                
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="company_id"/>
                            <field name="pet_id"/>
                            <field name="partner_id" options="{'no_quick_create': True, 'no_open': True}"/>
                            <field name="partner_phone" />
                            <field name="partner_email" />
                            <field name="date" />
                            <field name="user_id" options="{'no_quick_create': True, 'no_open': True}"/>
                        </group>
                        <group>
                            <field name="duration_minutes" widget="float_time"/>                           
                            <field name="assigned" />
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="total" widget="monetary"/>
                        </group>                       
                    </group>
                    <notebook>
                        <page name="lines_page" string="Products">
                            <field name="line_ids" nolabel="1" context="{'tree_view_ref':'veterinary_clinic_borja.veterinary_appointment_line_simple_view_tree', 'form_view_ref':'veterinary_clinic_borja.veterinary_appointment_line_simple_view_form', 'default_qty': 2.0}"/>
                            <!--<field name="line_ids" >
                                 <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="name"/>
                                    <field name="qty"/>
                                    <field name="price_unit"/>
                                </tree> -->
                                <!-- Without tree editable bottom define form 
                                <form>
                                    <group>
                                        <group>
                                            <field name="product_id" />
                                            <field name="name" />
                                        </group>
                                        <group>
                                            <field name="qty"/>                          
                                            <field name="price_unit" />
                                        </group>                       
                                    </group>
                                </form>    
                              </field>  -->
                        </page>
                        <page name="reason_page" string="Reason">
                            <field name="reason" /> 
                        </page>
                         <page name="solution_page" string="Solution">
                            <field name="solution" /> 
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="veterinary_appointment_view_search" model="ir.ui.view">
        <field name="name">veterinary.appointment.view.search</field>
        <field name="model">veterinary.appointment</field>
        <field name="arch" type="xml">
            <search string="Veterinary Appointment">
                <field name="name" string="Name" filter_domain="['|', '|', ('reason', 'ilike', self), ('solution', 'ilike', self),('name', 'ilike', self)]"/>
                <field name="user_id" />
                <field name="date" />
                <filter name="draft_filter" string="draft" domain="[('status', '=', 'draft')]" />
                <filter name="done_filter" string="done" domain="[('status', '=', 'done')]" />
                <filter name="group_by_user_id" string="user" context="{'group_by': 'user_id'}" />
                <filter name="group_by_status" string="status" context="{'group_by': 'status'}" />
            </search>
        </field>
    </record>

    <record id="veterinary_appointment_view_kanban" model="ir.ui.view">
        <field name="name">veterinary.appointment.view.kanban</field>
        <field name="model">veterinary.appointment</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status">
                <field name="name"/>
                <field name="date"/>
                <field name="user_id"/>
                <field name="status"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-menu">
                        <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                        <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                    </t>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} oe_kanban_global_click oe_kanban_card d-flex flex-column">
                            <div class="oe_kanban_content flex-grow-1">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="date" />
                                </div>
                            </div>
                            <div class="oe_kanban_footer">
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <!-- <field name="priority" widget="priority" groups="base.group_user"/>
                                        <field name="activity_ids" widget="kanban_activity"/> -->
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="user_id" widget="many2one_avatar_user" domain="[('share', '=', False)]"/>
                                    </div>
                                </div>
                            </div>                        
                        </div>                        
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="veterinary_appointment_view_pivot" model="ir.ui.view">
        <field name="name">veterinary.appointment.view.pivot</field>
        <field name="model">veterinary.appointment</field>
        <field name="arch" type="xml">
            <pivot string="Appointments">
                <field name="name"/>
                <field name="user_id" type="row"/>
                <field name="date" type="col"/>
                <field name="duration_minutes" widget="float_time" type="measure"/> 
            </pivot>
        </field>
    </record>

    <record id="veterinary_appointment_view_graph" model="ir.ui.view">
        <field name="name">veterinary.appointment.view.graph</field>
        <field name="model">veterinary.appointment</field>
        <field name="arch" type="xml">
            <graph string="Appointments" type="bar">
                <field name="user_id"/>
                <field name="duration_minutes" type="measure"/>
            </graph>
        </field>
    </record>

     <record id="veterinary_appointment_view_calendar" model="ir.ui.view">
        <field name="name">veterinary.appointmentview.calendar</field>
        <field name="model">veterinary.appointment</field>
        <field name="arch" type="xml">
            <calendar string="Appointments" date_start="date" color="user_id">
                <field name="user_id"/>
                <field name="name"/>
                <field name="status" filters="1"/>
            </calendar>
        </field>
    </record>

    <record id="veterinary_appointment_action" model="ir.actions.act_window">
        <field name="name">Appointment</field>
        <field name="res_model">veterinary.appointment</field>
        <field name="view_mode">tree,form,kanban,pivot,graph,calendar</field>
        <field name="context">{"search_default_draft_filter": 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new Appointment
        </p>
        </field>
    </record>

     <menuitem
        id="veterinary_appointment_menu"
        name="Appointment"
        action="veterinary_appointment_action"
        parent="veterinary_management_menu"
        sequence="20"/>
</odoo>