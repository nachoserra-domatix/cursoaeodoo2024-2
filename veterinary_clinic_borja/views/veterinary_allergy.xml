<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="veterinary_allergy_view_tree" model="ir.ui.view">
        <field name="name">veterinary_allergy.view.tree</field>
        <field name="model">veterinary.allergy</field>
        <field name="arch" type="xml">
            <tree string="Allergis">
                <field name="name" />
                <field name="severity_degree" widget="badge"/>
                <field name="description" optional="show"/>
            </tree>
        </field>
    </record>
    <record id="veterinary_allergy_view_form" model="ir.ui.view">
        <field name="name">veterinary_allergy.view.form</field>
        <field name="model">veterinary.allergy</field>
        <field name="arch" type="xml">
            <form string="Allergy">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="severity_degree" />                            
                            <field name="is_severe" widget="boolean_toggle"/> 
                        </group>
                        <group>
                            <field name="description" />                            
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="veterinary_allergy_action" model="ir.actions.act_window">
        <field name="name">Allergy</field>
        <field name="res_model">veterinary.allergy</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new Allergy
        </p>
        </field>
    </record>
   
    <menuitem
        id="veterinary_allergy_menu"
        name="Allergis"
        action="veterinary_allergy_action"
        parent="veterinary_management_menu"
        sequence="30"/>
</odoo>