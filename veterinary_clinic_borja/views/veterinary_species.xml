<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="veterinary_species_view_tree" model="ir.ui.view">
        <field name="name">veterinary_species.view.tree</field>
        <field name="model">veterinary.species</field>
        <field name="arch" type="xml">
            <tree string="Species">
                <field name="name" />
                <field name="code" />
            </tree>
        </field>
    </record>
    <record id="veterinary_species_view_form" model="ir.ui.view">
        <field name="name">veterinary_species.view.form</field>
        <field name="model">veterinary.species</field>
        <field name="arch" type="xml">
            <form string="Species">
                <sheet>
                    <group>
                        <group>
                            <field name="code" />                            
                        </group>
                        <group>
                            <field name="name" />                            
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="veterinary_species_action" model="ir.actions.act_window">
        <field name="name">Species</field>
        <field name="res_model">veterinary.species</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new Species
        </p>
        </field>
    </record>
   
    <menuitem
        id="veterinary_species_menu"
        name="Species"
        action="veterinary_species_action"
        parent="veterinary_management_menu"
        sequence="50"/>
</odoo>