<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="veterinary_surgery_view_tree" model="ir.ui.view">
        <field name="name">veterinary_surgery.view.tree</field>
        <field name="model">veterinary.surgery</field>
        <field name="arch" type="xml">
            <tree string="Surgeris">
                <field name="pet_id"/>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="surgery_date"/>                
                <field name="status" widget="badge"/>
            </tree>
        </field>
    </record>
    <record id="veterinary_surgery_view_form" model="ir.ui.view">
        <field name="name">veterinary_surgery.view.form</field>
        <field name="model">veterinary.surgery</field>
        <field name="arch" type="xml">
            <form string="Surgery">
                <header>
                    <field name="status" options="{'clickable':1}" widget="statusbar"/>
                    <button string="Back to draft" invisible="status in ('draft')" name="action_draft" type="object" class="btn-info"/>
                    <button string="In progress" invisible="status in ('in_progress', 'done')" name="action_in_progress" type="object" class="btn-outline-warning"/>
                    <button string="Done" invisible="status in ('done', 'cancelled')" name="action_done" type="object" class="btn-success"/>
                    <button string="Cancelled" invisible="status in ('cancelled')" name="action_cancelled" type="object" class="btn-danger"/>
                    <button string="Set other status" invisible="status in ('other')" name="action_other" type="object" class="btn-warning"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="pet_id" domain="[('age', '>', 1), ('weight', '>', 2)]"/>
                            <field name="employee_id" />                          
                        </group>
                        <group>
                            <field name="surgery_date" />                         
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="veterinary_surgery_view_search" model="ir.ui.view">
        <field name="name">veterinary.surgery.view.search</field>
        <field name="model">veterinary.surgery</field>
        <field name="arch" type="xml">
            <search string="Veterinary surgery">
                <field name="name"/>
                <field name="employee_id" />
                <field name="pet_id" />
                <field name="surgery_date" />
                <filter name="draft_filter" string="draft" domain="[('status', '=', 'draft')]" />
                <filter name="done_filter" string="done" domain="[('status', '=', 'done')]" />
                <filter name="done_cancelled" string="cancelled" domain="[('status', '=', 'cancelled')]" />
                <filter name="group_by_employee_id" string="employee" context="{'group_by': 'employee_id'}" />
                <filter name="group_by_status" string="status" context="{'group_by': 'status'}" />
                <filter name="group_by_pet_id" string="pet" context="{'group_by': 'pet_id'}" />
            </search>
        </field>
    </record>
     <record id="veterinary_surgery_view_kanban" model="ir.ui.view">
        <field name="name">veterinary.surgery.view.kanban</field>
        <field name="model">veterinary.surgery</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status">
                <field name="name"/>
                <field name="surgery_date"/>
                <field name="employee_id"/>
                <field name="status"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-menu">
                        <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                        <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                    </t>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} oe_kanban_global_click oe_kanban_card d-flex flex-column">
                            <div class="oe_kanban_content flex-grow-1">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="surgery_date" />
                                </div>
                            </div>
                            <div class="oe_kanban_footer">
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <!-- <field name="priority" widget="priority" groups="base.group_user"/>
                                        <field name="activity_ids" widget="kanban_activity"/> -->
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="employee_id" />
                                    </div>
                                </div>
                            </div>                        
                        </div>                        
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="veterinary_surgery_view_pivot" model="ir.ui.view">
        <field name="name">veterinary.surgery.view.pivot</field>
        <field name="model">veterinary.surgery</field>
        <field name="arch" type="xml">
            <pivot string="Surgerys">
                <field name="name"/>                
                <field name="pet_id" type="row"/>
                <field name="employee_id" type="row"/>
                <field name="surgery_date" type="col"/>
            </pivot>
        </field>
    </record>
     <record id="veterinary_surgery_view_graph" model="ir.ui.view">
        <field name="name">veterinary.surgery.view.graph</field>
        <field name="model">veterinary.surgery</field>
        <field name="arch" type="xml">
            <graph string="Surgerys" type="bar">
                <field name="pet_id"/>
                <field name="status"/>
            </graph>
        </field>
    </record>
    <record id="veterinary_surgery_view_calendar" model="ir.ui.view">
        <field name="name">veterinary.surgeryview.calendar</field>
        <field name="model">veterinary.surgery</field>
        <field name="arch" type="xml">
            <calendar string="Surgerys" date_start="surgery_date" color="employee_id">
                <field name="pet_id"/>
                <field name="name"/>
                <field name="status" filters="1"/>
            </calendar>
        </field>
    </record>
    <record id="veterinary_surgery_action" model="ir.actions.act_window">
        <field name="name">Surgery</field>
        <field name="res_model">veterinary.surgery</field>
        <field name="view_mode">tree,form,kanban,pivot,graph,calendar</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new surgery
        </p>
        </field>
    </record>
   
    <menuitem
        id="veterinary_surgery_menu"
        name="Surgery"
        action="veterinary_surgery_action"
        parent="veterinary_management_menu"
        sequence="40"/>
</odoo>