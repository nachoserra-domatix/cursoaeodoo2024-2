<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add contextual button on partner form view -->
    <record id="view_partners_form" model="ir.ui.view">
        <field name="name">res_partner.view.form.veterinary</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <data>
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="object"
                            name="partner_pets"
                            icon="fa-paw"
                            invisible="pets_count == 0">
                            <field string="Pets" name="pets_count" widget="statinfo"/>
                    </button>
                </div>
            </data>
        </field>
    </record>

</odoo>
