<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="veterinary_pet_adoption_view_tree" model="ir.ui.view">
        <field name="name">veterinary.pet.adoption.view.tree</field>
        <field name="model">veterinary.pet.adoption</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" string="Pet Adoptions">
                <field name="name"/>
                <field name="shelter_entry"/>
                <field name="adoption_date"/>
                <field name="pet_id"/>
                <field name="partner_id"/>
                <field name="status_id"/>
                <field name="user_id"/>
                <field name="shelter_days"/>
                <field name="adoption_fee"/>
                <field name="currency_id" column_invisible="1"/>
            </tree>        
        </field>  
    </record>
    <record id="veterinary_pet_adoption_view_form" model="ir.ui.view">
         <field name="name">veterinary.pet.adoption.view.form</field>
        <field name="model">veterinary.pet.adoption</field>
        <field name="arch" type="xml">
            <form string="Pet Adoption">
             <header></header>
             <sheet>
                <div class="oe_title">
                    <h1>
                        <field name="name" />
                    </h1>
                </div>
                <group>
                    <group>                        
                        <field name="shelter_entry" />
                        <field name="adoption_date" />
                        <field name="shelter_days" />
                        <field name="currency_id" invisible="1"/>
                        <field name="adoption_fee" />
                    </group>
                    <group>
                        <field name="pet_id" domain="[('is_adopted','=',False)]"/>                           
                        <field name="partner_id" />
                        <field name="user_id"/>
                        <field name="status_id"/>
                    </group>                       
                </group>
                <notebook>
                    <page name="notes_page" string="Notes">
                        <field name="notes" /> 
                    </page>
                </notebook>
             </sheet>
            </form>              
        </field>  
    </record>
    <record id="veterinary_pet_adoption_view_pivot" model="ir.ui.view">
        <field name="name">veterinary.pet.adoption.view.pivot</field>
        <field name="model">veterinary.pet.adoption</field>
        <field name="arch" type="xml">
            <pivot string="Pet Adoption">
                <field name="name"/>
                <field name="partner_id" type="row"/>
                <field name="adoption_date" type="col"/>
            </pivot>
        </field>
    </record>

    <record id="veterinary_pet_adoption_view_kanban" model="ir.ui.view">
        <field name="name">veterinary.pet.adoption.view.kanban</field>
        <field name="model">veterinary.pet.adoption</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status_id">
                <field name="name"/>
                <field name="adoption_date"/>
                <field name="partner_id"/>
                <field name="status_id"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-menu">
                        <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                        <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                    </t>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} oe_kanban_global_click oe_kanban_card d-flex flex-column">
                            <div class="oe_kanban_content flex-grow-1">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="adoption_date" />
                                </div>
                            </div>
                             <div class="oe_kanban_footer">
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="avatar_pet" widget="image" options="{'size':[24,24]}"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="partner_id" widget="many2one_avatar_user" />
                                    </div>
                                </div>
                            </div>                                               
                        </div>                        
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="veterinary_pet_adoption_view_search" model="ir.ui.view">
        <field name="name">veterinary.pet.adoption.view.search</field>
        <field name="model">veterinary.pet.adoption</field>
        <field name="arch" type="xml">
            <search string="Pet Adoption">
                <field name="name" filter_domain="['|', '|', ('pet_id', 'ilike', self),('name', 'ilike', self), ('notes', 'ilike', self)]" string="Name"/>
                <field name="partner_id" string="Partner"/>
                <field name="user_id" string="User"/>
                <filter name="is_adopted" string="Is Adopted" domain="[('status_id.is_adopted', '=', True)]"  />
                <filter name="not_adopted" string="Not Adopted" domain="[('status_id.is_adopted', '=', False)]"  />
                <filter name="group_by_user_id" string="User" context="{'group_by': 'user_id'}" />
            </search>
        </field>
    </record>
     <record id="veterinary_pet_adoption_action" model="ir.actions.act_window">
        <field name="name">Pet Adoption</field>
        <field name="res_model">veterinary.pet.adoption</field>
        <field name="view_mode">tree,form,kanban,pivot</field>
        <field name="context">{"search_default_not_adopted": 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new Pet adoption
        </p>
        </field>
    </record>
    <menuitem
        id="veterinary_pet_adoption_menu"
        name="Pet Adoption"
        action="veterinary_pet_adoption_action"
        parent="veterinary_management_menu"
        sequence="60"/>
</odoo>
