<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="veterinary_insurance_view_tree" model="ir.ui.view">
        <field name="name">veterinary_insurance.view.tree</field>
        <field name="model">veterinary.insurance</field>
        <field name="arch" type="xml">
            <tree string="Insurance">
                <field name="pet_id" />       
                <field name="insurance_company"/>
                <field name="policy_number" optional="show"/>
                <field name="coverage_details" optional="show"/>
                <field name="expiration_date" optional="show"/>
                <field name="expired" optional="show"/>
            </tree>
        </field>
    </record>
    <record id="veterinary_insurance_view_form" model="ir.ui.view">
        <field name="name">veterinary_insurance.view.form</field>
        <field name="model">veterinary.insurance</field>
        <field name="arch" type="xml">
            <form string="Insurance">
                <header>
                    <button string="Check is expired" invisible="expired == True" name="action_check_expired" type="object" class="btn-info"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="policy_number" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="pet_id" domain="[('vaccinated', '=', True)]"/>
                            <field name="insurance_company" />
                        </group>
                        <group>
                            <field name="expiration_date" />
                            <field name="expired" />                            
                        </group>
                    </group>
                    <notebook>
                        <page name="coverage_details" string="coverage_details">
                            <field name="coverage_details" /> 
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="veterinary_insurance_action" model="ir.actions.act_window">
        <field name="name">Insurance</field>
        <field name="res_model">veterinary.insurance</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new insurance
        </p>
        </field>
    </record>
   
    <menuitem
        id="veterinary_insurance_menu"
        name="Insurance"
        action="veterinary_insurance_action"
        parent="veterinary_management_menu"
        sequence="40"/>
</odoo>