<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_appointment">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.external_layout">
                <h2 t-field="o.name"/>
                <div class="page">
                    <div class="row mt-4 mb-2">
                        <div class="col-auto col-3 mw-100 mb-2">
                            <Strong>Date:</Strong><br/>
                            <span t-field="o.date" t-options="{'widget':'date'}"/>
                        </div> 
                        <div class="col-auto col-3 mw-100 mb-2">
                            <Strong>Pet:</Strong><br/>
                            <span t-field="o.pet_id"/>
                        </div> 
                        <div class="col-auto col-3 mw-100 mb-2">
                            <Strong>Partner:</Strong><br/>
                            <span t-field="o.partner_id"/>
                        </div> 
                    </div>                   
                    <table class="table table-sm o_main_table table-borderless mt-4">
                        <thread>
                            <th class="text-start">Product</th>                    
                            <th class="text-end">Qty</th> 
                        </thread>
                        <tbody>
                            <t t-foreach="o.line_ids" t-as="line">
                                <tr>
                                    <td><span t-field="line.product_id"/></td>
                                    <td class="text-end"><span t-field="line.qty"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>                   
                </div>
            </t>
        </t>
    </t>
</template>   
<record id="paperformat_appointment" model="report.paperformat">
    <field name="name">A4 Appointment</field>
    <field name="default" eval="True"/>
    <field name="format">A4</field>
    <field name="orientation">Landscape</field>
    <field name="margin_top">3</field>
    <field name="margin_bottom">3</field>
    <field name="margin_left">3</field>
    <field name="margin_right">3</field>
    <field name="header_line" eval="False"/>
    <field name="header_spacing">3</field>
    <field name="dpi">80</field>
</record>

<record id="action_report_veterinary_appointment" model="ir.actions.report">
    <field name="name">Appointment Report</field>
    <field name="model">veterinary.appointment</field>
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">veterinary_clinic_borja.report_appointment</field>
    <field name="report_file">veterinary_clinic_borja.report_appointment</field>
    <field name="print_report_name">'%s' % object.name</field>
    <!-- <field name="paperformat_id" ref="paperformat_appointment"/> -->
    <field name="binding_model_id" ref="model_veterinary_appointment"/>
    <field name="binding_type">report</field>
</record>

<template id="report_appointment_simple">
    <t t-call="web.html_container">
    <table class="table table-sm o_main_table table-borderless mt-4">
        <thread>
            <th class="text-start">Name</th>                    
            <th class="text-end">Date</th> 
        </thread>
        <tbody>
            <t t-foreach="docs" t-as="o">
                <tr>
                    <td><span t-field="o.name"/></td>
                    <td class="text-end"><span t-field="o.date"/></td>
                </tr>
            </t>
        </tbody>
    </table>        
    </t>
</template> 

<record id="action_report_veterinary_appointment_simple" model="ir.actions.report">
    <field name="name">Appointment Report Simple</field>
    <field name="model">veterinary.appointment</field>
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">veterinary_clinic_borja.report_appointment_simple</field>
    <field name="report_file">veterinary_clinic_borja.report_appointment_simple</field>
    <field name="print_report_name">"Simple appointments"</field>
    <field name="binding_model_id" ref="model_veterinary_appointment"/>
    <field name="binding_type">report</field>
</record>

</odoo>
