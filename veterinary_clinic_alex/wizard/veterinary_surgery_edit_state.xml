<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="veterinary_surgery_edit_state_view_form" model="ir.ui.view">
        <field name="name">veterinary.surgery.edit.state.view.form</field>
        <field name="model">veterinary.surgery.edit.state</field>
        <field name="arch" type="xml">
            <form string="Mass edit surgery state">
                <p class="oe_grey"> Here you can edit massively the appointments state </p>
                <group name="name" string="string">
                    <field name="surgery_state" />
                </group>
                <footer>
                    <button name="mass_edit_state" string="Confirm" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="veterinary_surgery_edit_state_action" model="ir.actions.act_window">
        <field name="name">Mass edit state</field>
        <field name="res_model">veterinary.surgery.edit.state</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_veterinary_surgery"></field>
        <field name="binding_view_types">list</field>
            
       
    </record>

    <menuitem
        id="veterinary_surgery_edit_state_menu"
        name="Mass edit surgery"
        action="veterinary_surgery_edit_state_action"
        
        parent="veterinary_management_menu"
        sequence="100"/>

</odoo>
