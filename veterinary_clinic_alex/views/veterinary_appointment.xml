<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="veterinary_appointment_view_tree" model="ir.ui.view">
        <field name="name">veterinary.appointment.view.tree</field>
        <field name="model">veterinary.appointment</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" string="Appointments"> <!--multi_edit permite editar varios registros al mismo tiempo--> 
            <field name="sequence" widget="handle"></field>
                <field name="name"></field>
                <field name="partner_id"></field>
                <field name="date" optional="show"></field>
                <field name="urgency" widget="boolean_toggle" optional="show"></field>
                <field name="user_id" optional="show"></field>
                <field name="state" optional="show" widget="badge"></field>
                <field name="duration" optional="hide" widget="float_time"></field>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"></field>          
            </tree>
        </field>
    </record>

    <record id="veterinary_appointment_view_form" model="ir.ui.view">
        <field name="name">veterinary.appointment.view.form</field>
        <field name="model">veterinary.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointment">
            <header>
                <button string="Back to draft" invisible="state in ('draft')" name="action_draft" type="object" class="btn-secondary"/>
                <button string="Confirm" invisible="state in ('done','cancel')" name="action_done" type="object" class="btn-success"/>
                <button string="Cancel" groups="veterinary_clinic_alex.veterinary_clinic_groups_manager" invisible="state in ('cancel')" name="action_cancel" type="object" class="btn-danger"/>    
                <button string="Tags"  name="create_tags" type="object" class="btn-danger"/>    
                <field name="state" options="{'clickable' : 1}" widget="statusbar"></field> <!-- clickable permite hacer que el statusbar sea clickable para avanzar-->
                
            </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"></field>
                        </h1>
                    </div>
                    <group> <!-- Si no se pone group aparecerÃ­a el campo sin etiqueta-->
                        <group >
                            <field name="company_id"></field>
                            <field name="pet_id" />
                            <field name="partner_id" options="{ 'no_quick_create':True, 'no_open':True}"></field>
                            <field name="partner_phone"></field>
                            <field name="partner_email"></field>
                            <field name="date"></field>
                            <field name="user_id" options="{ 'no_quick_create':True, 'no_open':True}"></field>
                            
                        </group>
                        <group >
                            <field name="duration" widget="float_time"></field>
                            <field name="state"></field>  
                            <field name="assigned" ></field>                                                      
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"></field>                                                      
                                                                         
                        </group>                    
                    </group>
                    
                    <notebook>
                        <page name="Lines" string="Products">
                            <field name="line_ids" context="{'tree_view_ref':'veterinary_clinic_alex.veterinary_appointment_line_simple_view_tree',
'form_view_ref':'veterinary_clinic_alex.veterinary_appointment_line_simple_view_form', 'default_qty':1.0}">
                            
                                    
                            </field>
                            
                        </page>
                        <page name="reason_page" string="Reason">
                            <field name="reason"></field>
                            
                        </page>
                        <page name="solution_page" string="Solution">
                            <field name="solution"></field>
                            
                        </page>
                    </notebook>
                    <group>
                        <group>
                        </group>
                        <group>
                            <field name="total" style="font-weight: bold; text-align: end; font-size: x-large"/> 
                        </group>
                        
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="veterinary_appointment_view_search" model="ir.ui.view">
        <field name="name">veterinary.appointment.view.search</field>
        <field name="model">veterinary.appointment</field>
        <field name="arch" type="xml">
            <search string="Veterinary Appointment">
                <field name="name" filter_domain="['|', '|', ('reason', 'ilike', self),
('solution', 'ilike', self),('name', 'ilike', self)]"></field>
                <field name="user_id"></field>
                <field name="date"></field>
                <filter name="draft_filter" string="Draft" domain="[('state', '=', 'draft')]" />
                <filter name="done_filter" string="Done" domain="[('state', '=', 'done')]" />
                <filter name="group_by_user_id" string="User" context="{'group_by': 'user_id'}" />
                <filter name="group_by_state" string="State" context="{'group_by': 'state'}" />

            
            </search>
        </field>
    </record>


    <record id="veterinary_appointment_view_kanban" model="ir.ui.view">
        <field name="name">veterinary.appointment.view.kanban</field>
        <field name="model">veterinary.appointment</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
            <field name="name"></field>
            <field name="date"></field>
            <field name="user_id"></field>
            <field name="color"></field>
                <templates>
                    <t t-name="kanban-menu">
                        <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                        <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                    </t>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} oe_kanban_global_click oe_kanban_card d-flex flex-column">
                            
                                    <div class="oe_kanban_details">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    </div>
                                    <div class="o_kanban_record_subtitle">
                                        <t >
                                            <field name="date" />
                                            
                                        </t>
                                        
                                    
                                    </div>
                                    <div class="oe_kanban_footer">
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <field name="user_id" widget="many2one_avatar_user" domain="[('share', '=', False)]"/>
                                        </div>
                                    </div>
                                </div>
                                    
                                    

                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="veterinary_appointment_view_pivot" model="ir.ui.view">
        <field name="name">veterinary.appointment.view.pivot</field>
        <field name="model">veterinary.appointment</field>
        <field name="arch" type="xml">
            <pivot string="Appointment" >

                <field name="user_id" type="row"></field>
                <field name="date" type="col"></field>
                <field name="duration" type="measure" widget="float_time"></field>
                
            </pivot>
        </field>
    </record>

    <record id="veterinary_appointment_view_graph" model="ir.ui.view">
        <field name="name">veterinary.appointment.view.graph</field>
        <field name="model">veterinary.appointment</field>
        <field name="arch" type="xml">
            <graph string="" type="bar">
            <field name="user_id" />
            <field name="duration" type="measure"/>
                
            </graph>
        </field>
    </record>

    <record id="veterinary_appointment_view_calendar" model="ir.ui.view">
        <field name="name">veterinary.appointment.view.calendar</field>
        <field name="model">veterinary.appointment</field>
        <field name="arch" type="xml">
            <calendar string="Apintments" date_start="date" color="user_id">
                <field name="name" />
                <field name="user_id" />
                <field name="state" filters="1"/>
            </calendar>
        </field>
    </record>



    <record id="veterinary_appointment_action" model="ir.actions.act_window">
        <field name="name">Appointment</field>
        <field name="res_model">veterinary.appointment</field>
        <field name="view_mode">tree,kanban,form,pivot,graph,calendar</field>

        <field name="context">{'search_default_draft_filter':1}</field>  <!-- Con esto se activa el filtro por defecto que habiamos creado-->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new appointment
            </p>
            
        </field>
    </record>


