<?xml version="1.0" encoding="utf-8"?>
<odoo>



    <record id="veterinary_adoption_view_tree" model="ir.ui.view">
        <field name="name">veterinary.adoption.view.tree</field>
        <field name="model">veterinary.adoption</field>
        <field name="arch" type="xml">
            <tree string="Veterinary Adoption">
                <field name="name" />
                <field name="entry_date" />
                <field name="adoption_date" />
                <field name="pet_id" />
                <field name="contact_id" />
                <field name="state_id" />
                <field name="user_id" />
                <field name="shelter_days" />
                <field name="notes" />
                <field name="adoption_price" />                                
            </tree>
        </field>
    </record>

    <record id="veterinary_adoption_view_form" model="ir.ui.view">
        <field name="name">veterinary.adoption.view.form</field>
        <field name="model">veterinary.adoption</field>
        <field name="arch" type="xml">
            <form string="Veterinary Adoption">
                <sheet>
                    <group>
                        <group>
                            
                            <field name="entry_date" />
                            <field name="adoption_date" />
                            <field name="pet_id" domain="[('is_adopted', '=', False)]"/>
                            <field name="contact_id" />
                            <field name="name" />                            
                            
                        </group>

                        <group >
                            
                            <field name="state_id"  widget="statusbar" clickable="True" />
                            <field name="user_id" />
                            <field name="shelter_days" />                            
                            <field name="adoption_price" />
                            
                        </group>
                        
                    </group>
                    <notebook>
                        <page name="notas" string="Notas">
                            <field name="notes" />
                            
                        </page>
                    </notebook>
                </sheet>
                
            </form>
        </field>
    </record>

    <record id="veterinary_adoption_view_kanban" model="ir.ui.view">
        <field name="name">veterinary.adoption.view.kanban</field>
        <field name="model">veterinary.adoption</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state_id">
            <field name="name"></field>
            <field name="pet_id"></field>
            <field name="user_id"></field>
            <field name="color"></field>
                <templates>
                    <t t-name="kanban-menu">
                        <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                        <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                    </t>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} oe_kanban_global_click oe_kanban_card d-flex flex-column">
                            
                                    <div class="oe_kanban_details">
                                        <strong class="o_kanban_record_title"><field name="pet_id"/></strong>
                                    </div>
                                    <div class="o_kanban_record_subtitle">
                                        <t >
                                            <field name="name" />
                                            
                                        </t>
                                        
                                    
                                    </div>
                                    <div class="oe_kanban_footer">
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            
                                        </div>
                                        <div class="oe_kanban_bottom_right">

                                            
                                            <field name="pet_id_image" widget="image" class="oe_avatar" options="{'size': [50,50]}"/>
                                        </div>
                                    </div>
                                </div>
                                    
                                    

                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="veterinary_adoption_view_pivot" model="ir.ui.view">
        <field name="name">veterinary.adoption.view.pivot</field>
        <field name="model">veterinary.adoption</field>
        <field name="arch" type="xml">
            <pivot string="Adoption" >

                <field name="user_id" type="row"></field>
                <field name="pet_id" type="col"></field>
          
                
            </pivot>
        </field>
    </record>



    <record id="veterinary_adoption_action" model="ir.actions.act_window">
        <field name="name">Veterinary Adoption</field>
        <field name="res_model">veterinary.adoption</field>
        <field name="view_mode">tree,form,kanban,pivot</field>
        <field name="domain">[]</field>
        <field name="context">{'search_default_not_adopted_filter':1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Adoption
            </p>
            
        </field>
    </record>

    <record id="veterinary_adoption_view_search" model="ir.ui.view">
        <field name="name">veterinary.adoption.view.search</field>
        <field name="model">veterinary.adoption</field>
        <field name="arch" type="xml">
            <search string="Veterinary Adoption">
            <field name="name" filter_domain="['|','|', ('name', 'ilike', self),('pet_id', 'ilike', self),
('notes', 'ilike', self)]"/>
            <field name="user_id" />
            <field name="contact_id" />
            <filter name="is_adopted_filter" string="Is Adopted" domain="[('state_id.is_adopted', '=', True)]" />
            <filter name="not_adopted_filter" string="Not Adopted" domain="[('state_id.is_adopted', '=', False)]" />
            <filter name="group_by_user_id" string="User" context="{'group_by': 'user_id'}" />
            </search>
        </field>
    </record>

    <menuitem
        id="veterinary_adoption_menu"
        name="Veterinary Adoption"
        action="veterinary_adoption_action"        
        parent="veterinary_management_menu"
        sequence="60"/>

</odoo>
