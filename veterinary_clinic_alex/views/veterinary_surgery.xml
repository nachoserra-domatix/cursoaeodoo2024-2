<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="veterinary_surgery_view_tree" model="ir.ui.view">
        <field name="name">veterinary.surgery.view.tree</field>
        <field name="model">veterinary.surgery</field>
        <field name="arch" type="xml">
            <tree multi_edit = "1" string="Surgery"> <!--multi_edit permite editar varios registros al mismo tiempo--> 
                <field name="name" widget="handle"></field>
                <field name="name" optional="show"></field>
                <field name="pet_id" optional="show"></field>
                <field name="employee_id" optional="show"></field>
                <field name="surgery_state" optional="show"></field>
                
                <field name="surgery_date" optional="show" ></field>

                
                
            </tree>
        </field>
    </record>

    <record id="veterinary_surgery_view_form" model="ir.ui.view">
        <field name="name">veterinary.surgery.view.form</field>
        <field name="model">veterinary.surgery</field>
        <field name="arch" type="xml">
            <form string="Surgery">   
                <header>
                    <button string="Back to pending" invisible="surgery_state in ('pending')" name="action_pending" type="object" class="btn-secondary"/>
                    <button string="Done" invisible="surgery_state in ('done')" name="action_done" type="object" class="btn-success"/>
                    <button string="Process" invisible="surgery_state in ('procces')" name="action_procces" type="object" class="btn-danger"/>
                </header>
                     
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre de la Cirugía"></field>
                        </h1>
                    </div>
                    <group> <!-- Si no se pone group aparecería el campo sin etiqueta-->
                        <group >
                            <field name="pet_id" domain="[('age','>',1),('weight','>',2)]"></field> <!--Si no se dice nada se asume un y habria que poner | delante para tener un or-->
                            <field name="surgery_date"></field>
                            
                            
                            
                        </group>
                        <group>
                            <field name="employee_id"></field>
                            <field name="surgery_state"></field>
                            
                        </group>
                                           
                    </group>
                    <notebook>
                        <page name="Steps" string="Steps">
                            <field name="line_ids" context="{'default_state': surgery_state}">
                                <tree editable="bottom">
                                    
                                    <field name="sequence" widget="handle"></field>
                                    <field name="name"></field>
                                    <field name="state" ></field>
                                    
                                </tree>
                            </field>
                            
                        </page>
                    </notebook>
                    
                </sheet>
            </form>
        </field>
    </record>

    <record id="veterinary_surgery_view_search" model="ir.ui.view">
        <field name="name">veterinary.surgery.view.search</field>
        <field name="model">veterinary.surgery</field>
        <field name="arch" type="xml">
            <search string="Surgery">
                <field name="name" filter_domain="['|', ('name', 'ilike', self),
('employee_id', 'ilike', self)]"></field>
                <field name="pet_id"></field>
                <field name="employee_id"></field>

                <filter name="group_by_employee_id" string="Employee" context="{'group_by': 'employee_id'}" />
                <filter name="group_by_surgery_state" string="Surgery State" context="{'group_by': 'surgery_state'}" />

              
                
            </search>
        </field>
    </record>

    <record id="veterinary_surgery_view_kanban" model="ir.ui.view">
        <field name="name">veterinary.surgery.view.kanban</field>
        <field name="model">veterinary.surgery</field>
        <field name="arch" type="xml">
            <kanban default_group_by = "surgery_state">
                <field name="name"></field>
                <field name="surgery_date"></field>
                <field name="employee_id"></field>
                <field name="pet_id"></field>
                <field name="color"></field>
                <templates>
                <t t-name="kanban-menu">
                        <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                        <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                    </t>
                    <t t-name="kanban-box">
                     <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} oe_kanban_global_click oe_kanban_card d-flex flex-column">
                     <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    </div>
                                    <div class="o_kanban_record_subtitle">
                                        <t >
                                            <field name="surgery_date" />
                                            <br></br>
                                            <field name="pet_id" />
                                            
                                        </t>
                                        
                                    
                                    </div>
                                    <div class="oe_kanban_footer">
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <field name="employee_id" widget="many2one_avatar_user"/>
                                        </div>
                                    </div>
                                </div>
                                    
                                    

                        </div>
                        
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="veterinary_surgery_view_pivot" model="ir.ui.view">
        <field name="name">veterinary.surgery.view.pivot</field>
        <field name="model">veterinary.surgery</field>
        <field name="arch" type="xml">
            <pivot string="Surgery" >

                <field name="employee_id" type="row"></field>
                <field name="surgery_date" type="col"></field>
                
            </pivot>
        </field>
    </record>

    <record id="veterinary_surgery_view_graph" model="ir.ui.view">
        <field name="name">veterinary.surgery.view.graph</field>
        <field name="model">veterinary.surgery</field>
        <field name="arch" type="xml">
            <graph string="" type="bar">
                <field name="employee_id" ></field>
                <field name="surgery_date" ></field>
            </graph>
        </field>
    </record>

    
    <record id="veterinary_surgery_view_calendar" model="ir.ui.view">
        <field name="name">veterinary.surgery.view.calendar</field>
        <field name="model">veterinary.surgery</field>
        <field name="arch" type="xml">
            <calendar string="Surgery" date_start="surgery_date" color="employee_id">
                <field name="employee_id" filters="1"></field>
                <field name="name"></field>
                <field name="pet_id" filters="1"></field>
            </calendar>
        </field>
    </record>
    




    <record id="veterinary_surgery_action" model="ir.actions.act_window">
        <field name="name">Veterinary Surgery</field>
        <field name="res_model">veterinary.surgery</field>
        <field name="view_mode">tree,kanban,form,pivot,graph,calendar</field>

        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Surgery
            </p>
            
        </field>
    </record>

    <menuitem
    id="vet_surgery"
    name="Surgery"
    action="veterinary_surgery_action"
    parent="veterinary_management_menu"
    sequence="30"/>

</odoo>