<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="veterinary_allergy_view_tree" model="ir.ui.view">
        <field name="name">veterinary.allergy.view.tree</field>
        <field name="model">veterinary.allergy</field>
        <field name="arch" type="xml">
            <tree multi_edit = "1" string="Allergy"> <!--multi_edit permite editar varios registros al mismo tiempo--> 
                <field name="name" widget="handle"></field>
                <field name="name" optional="show"></field>
                <field name="severity_grade" optional="show"></field>
                <field name="description" optional="show"></field>

                
                
            </tree>
        </field>
    </record>

    <record id="veterinary_allergy_view_form" model="ir.ui.view">
        <field name="name">veterinary.allergy.view.form</field>
        <field name="model">veterinary.allergy</field>
        <field name="arch" type="xml">
            <form string="Allergy">   
                     
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre de la Alergia"></field>
                        </h1>
                    </div>
                    <group> <!-- Si no se pone group aparecerÃ­a el campo sin etiqueta-->
                        
                            
                        <field name="severity_grade"></field>
                        <field name="is_severity" widget="boolean_toggle"></field>
                    </group>
                        <notebook>
                            <page name="Notas" string="string">
                                <field name="description"></field>
                                    
                            </page>
                         </notebook>
                            
                            
                            
                            
                        
                                           
                    
                    
                </sheet>
            </form>
        </field>
    </record>



    <record id="veterinary_allergy_action" model="ir.actions.act_window">
        <field name="name">Veterinary Allergy</field>
        <field name="res_model">veterinary.allergy</field>
        <field name="view_mode">tree,form</field>

        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Allergy
            </p>
            
        </field>
    </record>

    <menuitem
    id="vet_allergy"
    name="Allergy"
    action="veterinary_allergy_action"
    parent="veterinary_management_menu"
    sequence="40"/>

</odoo>