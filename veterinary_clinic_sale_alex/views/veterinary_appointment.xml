<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="veterinary_appointment_view_tree" model="ir.ui.view">
        <field name="name">veterinary.appointment.view.tree</field>
        <field name="inherit_id" ref="veterinary_clinic_alex.veterinary_appointment_view_tree"/>
        <field name="model">veterinary.appointment</field>
        <field name="arch" type="xml">
            <field name="duration" position="after">
                <field name="order_id"/>
            </field>
        </field>
    </record>

    <record id="veterinary_appointment_view_form" model="ir.ui.view">
        <field name="name">veterinary.appointment.view.form</field>
        <field name="inherit_id" ref="veterinary_clinic_alex.veterinary_appointment_view_form"/>
        <field name="model">veterinary.appointment</field>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet" position="inside">
                <div class="oe_button_box" name="button_box">
                    <button name="action_view_order" string="Orders" type="object" class="oe_stat_button" icon="fa-dollar">
                        <field name="order_count" string= "Orders" widget="statinfo"></field>
                    </button>
                </div>
                
            </xpath>
            <button name = "create_tags" position="after">
                <button string="Create"  name="create_order" type="object" class="btn-secondary"/>
            </button>
            <field name ="duration" position="after">
                <field name="order_id"/>
            </field>
        </field>
    </record>

</odoo>
