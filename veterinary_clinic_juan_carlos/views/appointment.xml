<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="veterinary_appointment_view_tree" model="ir.ui.view">
        <field name="name">veterinary.appointment.view.tree</field>
        <field name="model">veterinary.appointment</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" string="Appointments">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="pet_id"/>
                <field name="partner_id"/>
                <field name="partner_phone"/>
                <field name="partner_email"/>
                <field name="appointment_date" optional="show"/>
                <field name="total"/>
                <field name="urgency" widget="boolean_toggle" optional="show"/>
                <field name="state" widget="badge" optional="show"/>
                <field name="user_id" optional="show"/>
                <field name="tag_ids" optional="show" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="duration" optional="hide" widget="float_time"/>
            </tree>
        </field>
    </record>


<record id="veterinary_appointment_view_form" model="ir.ui.view">
    <field name="name">veterinary.appointment.view.form</field>
    <field name="model">veterinary.appointment</field>
    <field name="arch" type="xml">
        <form string="Appointment">
            <header>
                <button string="Go to surgeries" type="action" name="%(veterinary_surgeries_action)d"/>
                <button string="Back to draft" invisible="state in ('draft')" name="action_draft" type="object" class="btn-primary"/>
                <button string="Done" invisible="state in ('done','cancel')" name="action_done" type="object" class="btn-success"/>
                <button string="Cancelled" invisible="state in ('cancel')" name="action_cancelled" type="object" class="btn-danger"/>
                <button string="create_tags" name="create_tags" type="object" class="btn-danger"/>
                <field name="state" options="{'clickable':1}" widget="statusbar"/>
            </header>
            <sheet>
                <div class="oe_title">
                    <h1>
                        <field name="name"/>
                    </h1>
                </div>
                <group>
                    <group>
                        <field name="pet_id"/>
                        <field name="partner_id" options="{'no_create': True, 'no_quick_create': True, 'no_open': True}"/>
                        <field name="partner_phone"/>
                        <field name="partner_email"/>
                        <field name="appointment_date"/>
                        <field name="total"/>
                        <field name="user_id" options="{'no_create': True, 'no_quick_create': True, 'no_open': True}"/>
                    </group>
                    <group>
                        <field name="duration" widget="float_time"/>
                        <field name="assigned"/>
                    </group>
                    <group>
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    </group>
                </group>
                <notebook>
                    <page name="reason_page" string="Reason">
                        <field name="reason"/>
                    </page>
                    <page name="solution_page" string="Solution">
                        <field name="solution"/>
                    </page>
                    <page name="appointment_lines_page" string="Appointment Lines">
                        <!-- <field name="line_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="qty"/>
                                <field name="product_id"/>
                                <field name="price_unit"/>
                            </tree>
                        </field> -->
                        <field name="line_ids" context="{'tree_view_ref':'veterinary_clinic_juan_carlos.veterinary_appointment_line_simple_view_tree',
                                                        'form_view_ref':'veterinary_clinic_juan_carlos.veterinary_appointment_line_simple_view_form',
                                                        'default_qty':1.0}"/>
                    </page>
                </notebook>
            </sheet>
        </form>
    </field>
</record>



   <record id="veterinary_appointment_view_kanban" model="ir.ui.view">
        <field name="name">veterinary.appointment.view.kanban</field>
        <field name="model">veterinary.appointment</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
            <field name="name"/>
            <field name="appointment_date"/>
            <field name="user_id"/>
            <field name="color"/>
                <templates>
                    <t t-name="kanban-menu">
                            <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                            <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                            <ul class="oe_kanban_colorpicker" data-field="color"/>
                        </t>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} oe_kanban_global_click oe_kanban_card d-flex flex-column">     
                            <div class="oe_kanban_content flex-grow-1">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div> 
                                <div class="o_kanban_record_subtitle"> 
                                    <field name="appointment_date"/>
                                </div>

                            </div>
                            <div class="oe_kanban_footer">
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                      
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="user_id" widget="many2one_avatar_user" domain="[('share', '=', False)]"/>
                                    </div>
                                </div>
                            </div>
                        </div>       
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


<record id="veterinary_appointment_view_pivot" model="ir.ui.view">
    <field name="name">veterinary.appointment.view.pivot</field>
    <field name="model">veterinary.appointment</field>
    <field name="arch" type="xml">
        <pivot string="Appointments">

        <field name="user_id" type="row"></field>
        <field name="appointment_date" type="col"></field>
        <field name="duration" type="measure" widget="float_time"></field>
            
        </pivot>
    </field>
</record>


<record id="veterinary_appointment_view_graph" model="ir.ui.view">
    <field name="name">veterinary.appointment.view.graph</field>
    <field name="model">veterinary.appointment</field>
    <field name="arch" type="xml">
        <graph string="Appointments" type="bar">
            <field name="user_id" type="row"></field>
            <field name="duration" type="measure" widget="float_time"></field>
        </graph>
    </field>
</record>



<record id="veterinary_appointment_view_calendar" model="ir.ui.view">
    <field name="name">veterinary.appointment.view.calendar</field>
    <field name="model">veterinary.appointment</field>
    <field name="arch" type="xml">
        <calendar string="Appointment" date_start="appointment_date" color="user_id">

            <field name="name"></field>
            <field name="user_id"></field>
            <field name="state" filters="1"></field>

        </calendar>
    </field>
</record>


<record id="veterinary_appointment_view_search" model="ir.ui.view">
    <field name="name">veterinary.appointment.view.search</field>
    <field name="model">veterinary.appointment</field>
    <field name="arch" type="xml">
        <search string="Veterinary Appointment">

            <field name="name"/>
            <field name="appointment_date"/>
            <field name="user_id"/>

            <filter name="draft_filter" string="Draft" domain="[('state', '=', 'draft')]"/>
            <filter name="done_filter" string="Done" domain="[('state', '=', 'done')]"/>

            <filter name="group_by_user_id" string="User" context="{'group_by': 'user_id'}" />
            <filter name="group_by_state" string="State" context="{'group_by': 'state'}" />

            <field name="name" string="All" filter_domain="['|', '|', ('solution', 'ilike', self), ('name', 'ilike', self), ('reason', 'ilike', self)]"/>


        </search>
    </field>
</record>



    <record id="veterinary_appointment_action" model="ir.actions.act_window">
        <field name="name">Appointment</field>
        <field name="res_model">veterinary.appointment</field>
        <field name="view_mode">tree,form,kanban,pivot,graph,calendar</field>
        <field name="context">{}</field>
        <!-- <field name="context">{"search_default_done_filter":1}</field> -->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a new Appointment</p>
        </field>
    </record>

    <menuitem
        id="veterinary_appointment_menu"
        name="Appointment"
        action="veterinary_appointment_action"
        parent="veterinary_clinic_menu"
        sequence="10"/>

</odoo>
