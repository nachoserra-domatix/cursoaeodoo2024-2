<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="veterinary_surgeries_view_tree" model="ir.ui.view">
        <field name="name">veterinary.surgeries.view.tree</field>
        <field name="model">veterinary.surgeries</field>
        <field name="arch" type="xml">
            <tree string="Veterinary Surgeries">
                <field name="name"/>
                <field name="pet_id"/>
                <field name="doctor"/>
                <field name="surgerie_date"/>
                <field name="surgerie_date_state"/>
            </tree>
        </field>
    </record>

    <record id="veterinary_surgeries_view_form" model="ir.ui.view">
        <field name="name">veterinary.surgeries.view.form</field>
        <field name="model">veterinary.surgeries</field>
        <field name="arch" type="xml">
            <form string="Surgeries">
            <header>
                <button string="Scheduled" invisible="surgerie_date_state in ('scheduled')" name="action_scheduled" type="object" class="btn-primary"/>
                <button string="In Progress" invisible="surgerie_date_state in ('in_progress')" name="action_in_progress" type="object" class="btn-warning"/>
                <button string="Completed" invisible="surgerie_date_state in ('completed')" name="action_completed" type="object" class="btn-success"/>
            <field name="surgerie_date_state" options="{'clickable':1}" widget="statusbar"/>
            </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="pet_id" domain="[('age', '>', 1),('weight', '>', 2)]"/>
                            <field name="doctor"/>
                        </group>
                        <group>
                            <field name="surgerie_date"/>
                            <field name="surgerie_date_state"/>
                        </group>
                    </group>
                            <notebook>
                                <page name="surgeries_action_page" string="Surgeries actions">
                                    <field name="action_ids" context="{'default_state': surgerie_date_state}">
                                        <tree editable="bottom">
                                            <field name="name"/>
                                            <field name="sequence"/>
                                            <field name="state"/>
                                        </tree>
                                    </field>
                                </page>
                        </notebook>
                </sheet>
            </form>
        </field>
    </record>

   <record id="veterinary_surgeries_view_kanban" model="ir.ui.view">
        <field name="name">veterinary.surgeries.view.kanban</field>
        <field name="model">veterinary.surgeries</field>
        <field name="arch" type="xml">
            <kanban default_group_by="surgerie_date_state">
            <field name="name"/>
            <field name="surgerie_date"/>
            <field name="doctor"/>
            <field name="color"/>
                <templates>
                    <t t-name="kanban-menu">
                            <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                            <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                            <ul class="oe_kanban_colorpicker" data-field="color"/>
                        </t>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} oe_kanban_global_click oe_kanban_card d-flex flex-column">     
                            <div class="oe_kanban_content flex-grow-1">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div> 
                                <div class="o_kanban_record_subtitle"> 
                                    <field name="surgerie_date"/>
                                </div>

                            </div>
                            <div class="oe_kanban_footer">
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                      
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="doctor" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </div>       
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="veterinary_surgeries_view_pivot" model="ir.ui.view">
        <field name="name">veterinary.surgeries.view.pivot</field>
        <field name="model">veterinary.surgeries</field>
        <field name="arch" type="xml">
            <pivot string="Surgeries">

            <field name="doctor" type="row"></field>
            <field name="surgerie_date" type="col"></field>
            <field name="pet_id" type="measure"></field>
                
            </pivot>
        </field>
    </record>


    <record id="veterinary_surgeries_view_graph" model="ir.ui.view">
        <field name="name">veterinary.surgeries.view.graph</field>
        <field name="model">veterinary.surgeries</field>
        <field name="arch" type="xml">
            <graph string="Surgeries" type="bar">
                <field name="doctor" type="row"></field>
                <field name="pet_id" type="measure"></field>
            </graph>
        </field>
    </record>


    <record id="veterinary_surgeries_view_calendar" model="ir.ui.view">
        <field name="name">veterinary.surgeries.view.calendar</field>
        <field name="model">veterinary.surgeries</field>
        <field name="arch" type="xml">
            <calendar string="Surgeries" date_start="surgerie_date" color="doctor">

                <field name="name"></field>
                <field name="doctor"></field>
                <field name="surgerie_date_state" filters="1"></field>

            </calendar>
        </field>
    </record> 

    <record id="veterinary_surgeries_view_search" model="ir.ui.view">
        <field name="name">veterinary.surgeries.view.search</field>
        <field name="model">veterinary.surgeries</field>
        <field name="arch" type="xml">
            <search string="Veterinary surgeries">

                <field name="name"/>
                <field name="doctor"/>
                <field name="surgerie_date"/>

                <filter name="scheduled_filter" string="Scheduled" domain="[('surgerie_date_state', '=', 'scheduled')]"/>
                <filter name="completed_filter" string="Completed" domain="[('surgerie_date_state', '=', 'completed')]"/>
                <filter name="in_progress_filter" string="In progress" domain="[('surgerie_date_state', '=', 'in_progress')]"/>

                <filter name="group_by_user_id" string="Doctor" context="{'group_by': 'doctor'}" />
                <filter name="group_by_state" string="State" context="{'group_by': 'surgerie_date_state'}" />

                <field name="name" string="All" filter_domain="['|', '|', ('pet_id', 'ilike', self), ('doctor', 'ilike', self), ('name', 'ilike', self)]"/>

            </search>
        </field>
    </record>

    <record id="veterinary_surgeries_action" model="ir.actions.act_window">
        <field name="name">Surgeries</field>
        <field name="res_model">veterinary.surgeries</field>
        <field name="view_mode">tree,form,kanban,pivot,graph,calendar</field>
    </record>

    <menuitem
        id="veterinary_surgeries_menu"
        name="Surgeries"
        action="veterinary_surgeries_action"
        parent="veterinary_clinic_menu"
        sequence="50"/>

</odoo>
