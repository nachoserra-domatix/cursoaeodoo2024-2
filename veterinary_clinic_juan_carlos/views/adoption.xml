<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="veterinary_adoption_view_tree" model="ir.ui.view">
        <field name="name">veterinary.adoption.view.tree</field>
        <field name="model">veterinary.adoption</field>
        <field name="arch" type="xml">
            <tree string="Adotions">
                <field name="name"/>
                <field name="entry_date"/>
                <field name="adoption_date"/>
                <field name="pet_id"/>
                <field name="adopter_contact"/>
                <field name="adoption_state"/>
                <field name="responsible_user"/>
                <field name="days_in_shelter"/>
                <field name="notes"/>
                <field name="adoption_fee"/>
                <field name="adoption_state_bool"/>
            </tree>
        </field>
    </record>

    <record id="veterinary_adoption_view_form" model="ir.ui.view">
        <field name="name">veterinary.adoption.view.form</field>
        <field name="model">veterinary.adoption</field>
        <field name="arch" type="xml">
            <form string="Adoption">
                        <sheet>
                <group>
                <field name="name"/>
                <field name="entry_date"/>
                <field name="adoption_date"/>
                <field name="pet_id"/>
                <field name="adopter_contact"/>
                <field name="adoption_state"/>
                <field name="responsible_user"/>
                <field name="days_in_shelter"/>
                <field name="notes"/>
                <field name="adoption_fee"/>
                <field name="adoption_state_bool"/>
                </group>
            </sheet>
            </form>
        </field>
    </record>


   <record id="veterinary_adoption_view_kanban" model="ir.ui.view">
        <field name="name">veterinary.adoption.view.kanban</field>
        <field name="model">veterinary.adoption</field>
        <field name="arch" type="xml">
            <kanban default_group_by="adoption_state">
            <field name="name"/>
            <field name="entry_date"/>
            <field name="adoption_date"/>
                <templates>
                    <t t-name="kanban-menu">
                            <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                            <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                        </t>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click oe_kanban_card d-flex flex-column">      
                            <div class="oe_kanban_content flex-grow-1">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div> 
                                <div class="o_kanban_record_subtitle"> 
                                    <field name="adoption_date"/>
                                </div>

                            </div>
                            <div class="oe_kanban_footer">
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                      
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="pet_image" widget="image" options="{'size':[50,50]}"/>
                                    </div>
                                </div>
                            </div>
                        </div>       
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="veterinary_adoption_view_pivot" model="ir.ui.view">
        <field name="name">veterinary.adoption.view.pivot</field>
        <field name="model">veterinary.adoption</field>
        <field name="arch" type="xml">
            <pivot string="adoptions">

            <field name="entry_date" type="row"></field>
            <field name="adoption_date" type="col"></field>
            <field name="adoption_fee" type="measure" widget="float_time"></field>
                
            </pivot>
        </field>
    </record>


    <record id="veterinary_adoption_view_search" model="ir.ui.view">
        <field name="name">veterinary.adoption.view.search</field>
        <field name="model">veterinary.adoption</field>
        <field name="arch" type="xml">
            <search string="Veterinary adoption">

                <field name="name"/>
                <field name="responsible_user"/>
                <field name="adopter_contact"/>

                <filter name="adopted_done_filter" string="Has been adopted" domain="[('adoption_state.adopted', '=', True)]"/>
                <filter name="not_adopted_filter" string="Not adopted" domain="[('adoption_state.adopted', '=', False)]"/>


                <filter name="group_by_user_id" string="User" context="{'group_by': 'responsible_user'}" />
                <field name="name" string="All" filter_domain="['|', '|', ('pet_id', 'ilike', self), ('name', 'ilike', self), ('notes', 'ilike', self)]"/>


            </search>
        </field>
    </record>


    <record id="veterinary_adoption_action" model="ir.actions.act_window">
        <field name="name">Adoption</field>
        <field name="res_model">veterinary.adoption</field>
        <field name="view_mode">tree,form,kanban,pivot</field>
    </record>

    <menuitem
        id="veterinary_adoption_menu"
        name="Adoption"
        action="veterinary_adoption_action"
        parent="veterinary_clinic_menu"
        sequence="20"/>
</odoo>
