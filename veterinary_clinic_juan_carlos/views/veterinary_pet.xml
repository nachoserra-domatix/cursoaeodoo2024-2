<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record id="veterinary_pet_view_tree" model="ir.ui.view">
    <field name="name">veterinary.pet.view.tree</field>
    <field name="model">veterinary.pet</field>
    <field name="arch" type="xml">
        <tree multi_edit="1" string="Pet">
            <field name="name" optional="show"/>
            <field name="number_pet" optional="show"/>
            <field name="species_id" optional="show"/>
            <field name="birthdate" optional="hide"/>
            <field name="age" optional="show"/>
            <field name="weight" optional="hide"/>
            <field name="last_vaccination_date" optional="show"/>
            <field name="vaccinated" widget="boolean_toggle" optional="show"/>
            <field name="adopted"/>
            <field name="allergy_ids"/>
            <field name="pet_image" widget="image" class="oe_avatar"/>
        </tree>
    </field>
</record>


<record id="veterinary_pet_view_form" model="ir.ui.view">
    <field name="name">veterinary.pet.view.form</field>
    <field name="model">veterinary.pet</field>
    <field name="arch" type="xml">
        <form string="Pets">
        <header>
            <button string="Vaccinated" invisible="vaccinated == True" name="action_vaccinated" type="object" class="btn-success"/>
            <button string="Generate number chip" invisible="number_pet" groups="veterinary_clinic_juan_carlos.veterinary_clinic_groups_manager" name="action_chip_number_pet" type="object" class="btn-primary"/>
            <button string="Create insurance" name="create_insurance" type="object" class="btn-secondary"/>
            <button string="Finish surgeries" name="action_finish_surgeries" type="object" class="btn-secondary"/>
            <button string="Print appointments" name="action_print_appointments" type="object" class="oe_highlight"/>
        </header>
            <sheet>
            <div class="oe_button_box" name="button_box">
                <button name="action_view_surgeries" context="{'default_pet_id': id}" type="object" class="oe_stat_button" icon="fa-ambulance">
                    <field name="surgeries_count" string="Surgeries list" widget="statinfo"/>
                </button>
                <button name="action_view_history" type="object" class="oe_stat_button" icon="fa-gittip">
                    <field name="appointment_count" string="Medical history" widget="statinfo"/>
                </button>
                <button name="action_view_history_insurance" context="{'default_pet_id': id}" type="object" class="oe_stat_button" icon="fa-archive">
                    <field name="insurance_count" string="Insurance list" widget="statinfo"/>
                </button>
            </div>
            <field name="pet_image" widget="image" class="oe_avatar"/>
                <div class="oe_title">
                    <h1>
                        <field name="name"/>
                    </h1>
                </div>
            <group>
                <group>
                    <field name="adopted"/>
                    <field name="number_pet"/>
                    <field name="species_id"/>
                </group>
                <group>
                    <field name="birthdate"/>
                    <field name="age"/>
                    <field name="weight"/>
                </group>
                <group>
                    <field name="vaccinated"/>
                    <field name="last_vaccination_date"/>
                    <field name="allergy_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="severity_level"/>
                                <field name="allergy_description"/>
                                <field name="is_severe"/>
                            </tree>
                        </field>
                </group>
            </group>
            </sheet>
        </form>
    </field>
</record>


    <record id="veterinary_pet_action" model="ir.actions.act_window">
        <field name="name">Pets</field>
        <field name="res_model">veterinary.pet</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a new pet</p>
        </field>
    </record>


