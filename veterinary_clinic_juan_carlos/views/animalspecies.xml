<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="veterinary_animalspecies_view_tree" model="ir.ui.view">
        <field name="name">veterinary.animalspecies.view.tree</field>
        <field name="model">veterinary.animalspecies</field>
        <field name="arch" type="xml">
            <tree string="Animal Species">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="veterinary_animalspecies_view_form" model="ir.ui.view">
        <field name="name">veterinary.animalspecies.view.form</field>
        <field name="model">veterinary.animalspecies</field>
        <field name="arch" type="xml">
            <form string="Animal Species">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="veterinary_animalspecies_action" model="ir.actions.act_window">
        <field name="name">Animal Species</field>
        <field name="res_model">veterinary.animalspecies</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="veterinary_animalspecies_menu"
        name="Animal Species"
        action="veterinary_animalspecies_action"
        parent="veterinary_management_menu"
        sequence="30"/>

</odoo>
