<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="veterinary_insurance_view_tree" model="ir.ui.view">
        <field name="name">veterinary.insurance.view.tree</field>
        <field name="model">veterinary.insurance</field>
        <field name="arch" type="xml">
            <tree string="Veterinary Insurance">
                <field name="pet_id"/>
                <field name="insurance_company"/>
                <field name="policy_number"/>
                <field name="expiration_date"/>
                <field name="status_expired"/>
            </tree>
        </field>
    </record>

    <record id="veterinary_insurance_view_form" model="ir.ui.view">
        <field name="name">veterinary.insurance.view.form</field>
        <field name="model">veterinary.insurance</field>
        <field name="arch" type="xml">
            <form string="Insurance">
                <header>
                    <button string="Check if has expired" invisible="status_expired == True" name="action_expiration" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="insurance_company"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <!-- <field name="pet_id" domain="[('vaccinated', '=', True)]"/> -->
                            <field name="insurance_company"/>
                        </group>
                        <group>
                            <field name="policy_number"/>
                            <field name="coverage_details"/>
                        </group>
                        <group>
                            <field name="expiration_date"/>
                            <field name="status_expired"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="veterinary_insurance_action" model="ir.actions.act_window">
        <field name="name">Insurance</field>
        <field name="res_model">veterinary.insurance</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="veterinary_insurance_menu"
        name="Insurance"
        action="veterinary_insurance_action"
        parent="veterinary_clinic_menu"
        sequence="40"/>

</odoo>
