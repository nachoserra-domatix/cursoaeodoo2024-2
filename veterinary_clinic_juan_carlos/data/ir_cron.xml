<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="ir_cron_veterinary_insurance" model="ir.cron">
            <field name="name">Update Insurance Status</field>
            <field name="model_id" ref="model_veterinary_insurance"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_expired()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>

        <record id="ir_cron_veterinary_surgeries" model="ir.cron">
            <field name="name">Update Surgeries Status</field>
            <field name="model_id" ref="model_veterinary_surgeries"/>
            <field name="state">code</field>
            <field name="code">model._cron_chek_draft_date()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>
</odoo>
