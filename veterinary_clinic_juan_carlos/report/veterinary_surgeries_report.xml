<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_veterinary_surgeries">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <h2 t-field="o.name"/>
                    <div class="page">
                        <p><strong>Pet:</strong> <span t-field="o.pet_id.name"/></p>
                        <p><strong>Doctor:</strong> <span t-field="o.doctor"/></p>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Action Name</th>
                                    <th>Sequence</th>
                                    <th>State</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.action_ids" t-as="action">
                                    <tr>
                                        <td><span t-field="action.name"/></td>
                                        <td><span t-field="action.sequence"/></td>
                                        <td><span t-field="action.state"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>


    <record id="action_report_veterinary_surgeries" model="ir.actions.report">
        <field name="name">Surgeries report</field>
        <field name="model">veterinary.surgeries</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">veterinary_clinic_juan_carlos.report_veterinary_surgeries</field>
        <field name="report_file">veterinary_clinic_juan_carlos.report_veterinary_surgeries</field>
        <field name="print_report_name">'%s' % object.name</field>
        <!-- <field name="paperformat_id" ref= "paperformat_veterinary_surgeries"/> -->
        <field name="binding_model_id" ref="model_veterinary_surgeries"/>
        <field name="binding_type">report</field>
    </record>

</odoo>
