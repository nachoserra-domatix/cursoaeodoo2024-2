<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_veterinary_appointment">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <h2 t-field="o.name"/>
                    <div class="page">
                        <p><strong>Appointment Date:</strong> <span t-field="o.appointment_date" t-options="{'widget':'date'}"/></p>
                        <p><strong>Pet:</strong> <span t-field="o.pet_id.name"/></p>
                        <p><strong>Partner:</strong> <span t-field="o.partner_id.name"/></p>
                        <p><strong>Phone:</strong> <span t-field="o.partner_phone"/></p>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Line Description</th>
                                    <th>Quantity</th>
                                    <th>Unit Price</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.line_ids" t-as="line">
                                    <tr>
                                        <td><span t-field="line.name"/></td>
                                        <td><span t-field="line.product_id"/></td>
                                        <td><span t-field="line.qty"/></td>
                                        <td><span t-field="line.price_unit"/></td>
                                        <td><span t-field="line.subtotal"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <p><strong>Total:</strong> <span t-field="o.total"/></p>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="report_veterinary_appointment_simple">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>Veterinary Appointments</h2>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Appointment Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Iterar sobre todos los registros seleccionados -->
                            <t t-foreach="docs" t-as="o">
                                <tr>
                                    <td><span t-field="o.name"/></td>
                                    <td><span t-field="o.appointment_date" t-options="{'widget':'date'}"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>

