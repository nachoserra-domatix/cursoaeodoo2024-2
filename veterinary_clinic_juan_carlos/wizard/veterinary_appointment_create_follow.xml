<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="veterinary_appointment_create_follow_view_form" model="ir.ui.view">
        <field name="name">veterinary.appointment.create.follow.view.form</field>
        <field name="model">veterinary.appointment.create.follow</field>
        <field name="arch" type="xml">
            <form string="Mass create follow">
                <sheet>
                    <group>
                        <field name="partner_id"></field>
                        <field name="appointment_date"></field>
                        <field name="pet_id"></field>
                        <field name="follow_up_count"></field>
                    </group>
                    <footer>
                        <button string="Confirm" type="object" name="create_follow_appointments" class="oe_highlight"/>
                        <button string="Cancel" class="oe_highlight" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_veterinary_appointment_create_follow" model="ir.actions.act_window">
        <field name="name">Create appointment follows</field>
        <field name="res_model">veterinary.appointment.create.follow</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_veterinary_appointment"/>
        <field name="binding_view_types">list</field>
    </record>
    
</odoo>
